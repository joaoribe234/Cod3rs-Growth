<mvc:View	controllerName="sap.ui.InterfaceUsuario.COntrolador.Cadastro"
	        xmlns="sap.m"
	        xmlns:mvc="sap.ui.core.mvc"
	        displayBlock="true"
	        xmlns:core="sap.ui.core"
>
	<Page title="{i18n>tituloPaginaCadastro}"
		  titleAlignment="Center"
          showNavButton="true"
          navButtonPress=".cliqueVoltar"
>
		<headerContent>
			<Button icon="sap-icon://save" text="Salvar Cliente" press="cliqueSalvarCliente"/>
			<Button icon="sap-icon://decline" text="Cancelar" press="cliqueCancelar"/>
		</headerContent>
		<content>
			<Label text="{i18n>Nome}"/>
			<Input value="{dados>/nome}" placeholder="Nome"/>
			<Label text="{i18n>dataDeNascimento}"/>
			<DatePicker value="{dados>/dataDeNascimento}" placeholder="Dia/Mês/Ano" valueFormat="yyyy-MM-ddTHH:mm:ss.mmm'" displayFormat="dd/MM/yyyy"/>
			<Label text="{i18n>Telefone}"/>
			
			<Input  value="{dados>/telefone}" placeholder="(99) 99999-9999" />

			<Label text="{i18n>Sexo}" />
			<Input  value="{dados>/sexo}" placeholder="Sexo"/>
		</content>
	</Page>
</mvc:View>




