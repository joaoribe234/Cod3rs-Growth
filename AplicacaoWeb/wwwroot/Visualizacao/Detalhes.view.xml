<mvc:View controllerName="sap.ui.InterfaceUsuario.Controlador.Detalhes"
		  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  displayBlock="true"
  xmlns:core="sap.ui.core"
  >
	<Shell>
		<App >
			<Page binding="{/cliente}"
				  showNavButton="true"
				  navButtonPress=".cliqueVoltar"
				  showHeader="true"
				  >
				<content  display="flex">
					<Title text="{i18n>tituloPaginaDetalhes}" />
					<ToolbarSpacer />
					<Button icon="sap-icon://edit" text="Editar" />
					<Button icon="sap-icon://delete" text="Remover" />
				</content>
				<ObjectHeader title="{nome}" >
					<ObjectAttribute text="O nome do Cliente(a) é {path: 'nome'}!" />
					<ObjectAttribute text="Sua Data de Nascimento ocorreu na data {path: 'dataDeNascimento',
												 type: 'sap.ui.model.type.Date',
												 formatOptions: {
												 style: 'short',
												 source: {
												 pattern: 'yyyy-MM-ddTHH:mm:ss.mmm' }}}!" />
					<ObjectAttribute text="Seu Telefone atual é {telefone}!"/>
					<ObjectAttribute text="Seu Sexo é {sexo}!" />
					

				</ObjectHeader>
				
				
			</Page>
		</App>
	</Shell>
</mvc:View>
