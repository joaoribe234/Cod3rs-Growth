<mvc:View
  controllerName="sap.ui.InterfaceUsuario.Controlador.ListagemClientes"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  displayBlock="true"
  xmlns:core="sap.ui.core"
  >
	<Shell>
		<App>
			<Page title="{i18n>Clientes Cadastrados}">
				<content>
					<Table id="idTabelaCliente" items="{/clientes}" mode="SingleSelectMaster" selectionChange="onRowClick">
						<columns>
							<Column>
								<Text text="{i18n>Id}" />
							</Column>
							<Column>
								<Text text="{i18n>Nome}" />
							</Column>
							<Column>
								<Text text="{i18n>Sexo}" />
							</Column>
							<Column>
								<Text text="{i18n>Telefone}" />
							</Column>
							<Column>
								<Text text="{i18n>dataDeNascimento}" />
							</Column>
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<ObjectIdentifier title="{id}" />
									<Text text="{nome}" />
									<Text text="{sexo}" />
									<Text text="{telefone}" />
									<Text text="{dataDeNascimento}" />
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
				<footer>
					<Toolbar>
						<SearchField id="searchField" search="buscarCliente" />
						<ToolbarSpacer />
						<Button text="{i18n>Adicionar}" press="onAdd" />
					</Toolbar>
				</footer>
			</Page>
		</App>
	</Shell>
</mvc:View>



